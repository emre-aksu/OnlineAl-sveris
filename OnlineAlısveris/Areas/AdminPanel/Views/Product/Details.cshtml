
@model Product


<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card card-primary card-tabs">
                <div class="card-header p-0 pt-1">
                    <ul class="nav nav-tabs" id="custom-tabs-two-tab" role="tablist">
                        <li class="pt-2 px-3"><h3 class="card-title">@Model.Name</h3></li>
                        <li class="nav-item">
                            <a class="nav-link active" id="custom-tabs-two-home-tab" data-toggle="pill" href="#custom-tabs-two-home" role="tab" aria-controls="custom-tabs-two-home" aria-selected="true">Ürün Bilgisi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="custom-tabs-two-profile-tab" data-toggle="pill" href="#custom-tabs-two-profile" role="tab" aria-controls="custom-tabs-two-profile" aria-selected="false">Kategori Bilgisi</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="custom-tabs-two-tabContent">
                        <div class="tab-pane fade active show" id="custom-tabs-two-home" role="tabpanel" aria-labelledby="custom-tabs-two-home-tab">
                            <h1>ÜRÜN BİLGİSİ</h1>
                            <br />
                            @Model.Name <br />
                            @Model.Price <br />
                            @Model.Stock<br />
                          

                            
                        </div>
                        <div class="tab-pane fade" id="custom-tabs-two-profile" role="tabpanel" aria-labelledby="custom-tabs-two-profile-tab">
                            <h1>KATEGORİ</h1>
                            @Model.Category.Name <br />
                            @Model.Category.Description
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
 

    </div>
</div>